@using ServisVozila.Models
@model Automobil
@{
    ViewBag.Title = "Automobil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/Site.css">
<h2>Detalji o autombilu</h2>


<div class="row">
    <div class="col-md-2">
        <strong>ID vozila:</strong>
    </div>
    <div class="col-md-10">
        @Model.idAutomobil
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Broj šasije:</strong>
    </div>
    <div class="col-md-10">
        @Model.brojSasije
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <strong>Registarske tablice:</strong>
    </div>
    <div class="col-md-10">
        @Model.regTablice
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <strong>Kilometri:</strong>
    </div>
    <div class="col-md-10">
        @Model.kilometri
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Model vozila:</strong>
    </div>
    <div class="col-md-10">
        @Model.modelVozila
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Marka vozila:</strong>
    </div>
    <div class="col-md-10">
        Audi
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Godina proizvodnje:</strong>
    </div>
    <div class="col-md-10">
        @Model.godProizvodnje.ToString("yyyy")
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Boja vozila:</strong>
    </div>
    <div class="col-md-10">
        @Model.bojaVozila
    </div>
</div>


<br />

@Html.ActionLink("Povratak na popis klijenata", "PopisKlijenata", "Klijenti", new { @class = "btn btn-info btn-sm" });





