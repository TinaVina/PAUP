@using ServisVozila.Models
@model radnik
@{
    ViewBag.Title = "Briši";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> @ViewBag.Title</h2>


<strong>Jeste li sigurni da želite obrisati radnika @Model.prezimeRadnik (OIB: @Model.oibRadnik)?</strong>

<br />
<br />
@using (Html.BeginForm("Brisi", "Radnik"))
{
    @Html.AntiForgeryToken();
    <button type="submit" class="btn btn-danger">
        <span class="glyphicon glyphicon-ok" aria-hidden="false">
        </span>
        Izbriši
    </button>

    <br />
    <br />

    @Html.ActionLink("Odustani", "PopisRadnika", "Radnik", new { @class = "btn btn-info btn-sm" });
}

